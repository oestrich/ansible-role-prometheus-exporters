[Unit]
Description=Prometheus StatsD Exporter
After=network-online.target

[Service]
User=prometheus
Restart=on-failure
WorkingDirectory=/home/prometheus/statsd_exporter/{{ statsd_exporter_version }}/statsd_exporter
ExecStart=/home/prometheus/statsd_exporter/{{ statsd_exporter_version }}/statsd_exporter/statsd_exporter -statsd.mapping-config /home/prometheus/statsd_exporter/mapping.yml

[Install]
WantedBy=multi-user.target
